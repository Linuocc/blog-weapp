page {
  background-image: var(--gradualBlue);
  width: 100vw;
  /* overflow: hidden; */
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  width: 90%;
  margin: 0 auto;
}

.author {
  margin-left: 5%;
  margin-top: 10rpx;
}

.show-img-btn {
  width: 50rpx;
  height: 100rpx;
  position: fixed;
  top: 50%;
  left: 0;
  margin-top: -50rpx;
  font-size: 50rpx;
  text-align: center;
  border-top-right-radius: 70%;
  border-bottom-right-radius: 70%;
  background: #F1F1F1;
  line-height: 100rpx;
  opacity: 0.9;
  z-index: 1000;
}

.close-img-btn {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  top: 50%;
  right: 20rpx;
  margin-top: -50rpx;
  font-size: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  background: #F1F1F1;
  line-height: 100rpx;
  opacity: 0.9;
  z-index: 1000;
  transition: all 0.4s;
}

.DrawerPage {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0vw;
  background-color: white;
  transition: all 0.4s;
}

.DrawerPage.show {
  transform: scale(0.9, 0.9);
  left: 85vw;
  box-shadow: 0 0 60rpx rgba(0, 0, 0, 0.2);
  transform-origin: 0;
}

.DrawerWindow {
  position: absolute;
  width: 85vw;
  height: 100vh;
  left: 0;
  top: 0;
  transform: scale(0.9, 0.9) translateX(-100%);
  opacity: 0;
  pointer-events: none;
  transition: all 0.4s;
}

.DrawerWindow.show {
  transform: scale(1, 1) translateX(0%);
  opacity: 1;
  pointer-events: all;
}

.DrawerClose {
  position: absolute;
  width: 40vw;
  height: 100vh;
  right: 0;
  top: 0;
  color: transparent;
  padding-bottom: 30rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  background-image: linear-gradient(90deg, rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 0.6));
  letter-spacing: 5px;
  font-size: 50rpx;
  opacity: 0;
  pointer-events: none;
  transition: all 0.4s;
}

.DrawerClose.show {
  opacity: 1;
  pointer-events: all;
  width: 15vw;
  color: #fff;
}

.DrawerPage .cu-bar.tabbar .action button.icon {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin: 0;
  display: inline-block;
}

.DrawerPage .cu-bar.tabbar .action .cu-avatar {
  margin: 0;
}

.DrawerPage .nav {
  flex: 1;
}

.DrawerPage .nav .cu-item.cur {
  border-bottom: 0;
  position: relative;
}

.DrawerPage .nav .cu-item.cur::after {
  content: "";
  width: 10rpx;
  height: 10rpx;
  background-color: currentColor;
  position: absolute;
  bottom: 10rpx;
  border-radius: 10rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.DrawerPage .cu-bar.tabbar .action {
  flex: initial;
}

.articly-img {
  width: 100%;
  margin: 10rpx 0;
  border-radius: 10rpx;
  border: 2rpx solid #ECECEC;
}

.wrap {
  width: 90%;
  margin: 40rpx auto 40rpx;
}

.h2 {
  border-bottom: 1rpx solid #EEEEEE;
  margin: 30rpx 0;
  padding: 10rpx 0;
}

.img {
  width: 100%;
  border-radius: 10rpx;
}

.table {
  width: 100%;
  font-family: verdana, arial, sans-serif;
  font-size: 100%;
  color: #333;
  margin: 0;
  padding: 0;
  border-collapse: collapse;
  table-layout: fixed;
  word-wrap: break-word;
  border: 1px solid #DFE2E5;
}

.td {
  border: 1px solid #DFE2E5;
}

.th {
  border: 1px solid #DFE2E5;
  background: #F8F8F8;
}

.p>.code {
  color: #333333;
  background: #F3F4F4;
  font-size: 90%;
  padding: 3rpx;
  border-radius: 10rpx;
  border: 1rpx solid #E7EAED;
}

.pre {
  display: block;
  /* width: 650rpx; */
  color: #333333;
  background: #F8F8F8;
  /* word-break: break-all;
  word-wrap: break-word; */
  border: 1rpx solid #E7EAED;
  border-radius: 10rpx;
  padding: 0 15rpx 30rpx;

  font-size: 28.8rpx;
  margin: 0 auto;
  padding: 20rpx;
  overflow: scroll;
}

.code {
  padding: 20rpx;
  font-size: inherit;
  color: inherit;
  /* font-family: Arial, Helvetica, sans-serif; */
  /* font-weight: bold; */

  background-color: transparent;
  border-radius: 0;
}

.p {
  margin: 10rpx 0;
  word-spacing: 5rpx;
  letter-spacing: 3rpx;
  line-height: 50rpx;
  font-size: 32rpx;
}